<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    tools:context=".pedidos">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:text="Pedidos"
        android:textColor="#AC863D"
        android:textColorHighlight="#5C2235"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="67dp"
        android:layout_height="28dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:text="Tamaño"
        android:textColor="#AC863D"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="67dp"
        android:layout_height="28dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="32dp"
        android:text="Sabor"
        android:textColor="#AC863D"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/sab2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="162dp"
        android:layout_height="34dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:text="Ingrediente Extra"
        android:textColor="#AC863D"
        app:layout_constraintBottom_toTopOf="@+id/op2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <CheckBox
        android:textColor="#0E0E0E"
        android:id="@+id/op1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:minHeight="48dp"
        android:text="Galleta"
        app:layout_constraintBottom_toTopOf="@+id/op4"
        app:layout_constraintEnd_toStartOf="@+id/op2"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/op2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="24dp"
        android:minHeight="48dp"
        android:text="Fresa"
        android:textColor="#090909"
        app:layout_constraintBottom_toTopOf="@+id/op5"
        app:layout_constraintEnd_toStartOf="@+id/op3"
        app:layout_constraintStart_toEndOf="@+id/op1"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <CheckBox
        android:textColor="#040404"
        android:id="@+id/op3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:minHeight="48dp"
        android:text="Nuez"
        app:layout_constraintBottom_toTopOf="@+id/op6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/op2" />

    <CheckBox
        android:id="@+id/op4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="192dp"
        android:minHeight="48dp"
        android:text="Coco"
        android:textColor="#040404"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/op5"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/op5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="192dp"
        android:minHeight="48dp"
        android:text="M n M's"
        android:textColor="#050505"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/op6"
        app:layout_constraintStart_toEndOf="@+id/op4"
        app:layout_constraintTop_toBottomOf="@+id/op2" />

    <CheckBox
        android:id="@+id/op6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="192dp"
        android:minHeight="48dp"
        android:text="Chocolate"
        android:textColor="#101010"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/op5" />

    <Button
        android:id="@+id/calcular"
        android:layout_width="163dp"
        android:layout_height="59dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="47dp"
        android:layout_marginBottom="134dp"
        android:background="@drawable/boton"
        android:onClick="calcular"
        android:text="Calcular"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/op4" />

    <Button
        android:id="@+id/cancelar"
        android:layout_width="158dp"
        android:layout_height="59dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="134dp"
        android:background="@drawable/boton"
        android:onClick="cancelar"
        android:text="Cancelar"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/op5" />

    <TextView
        android:id="@+id/ttotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="TOTAL :"
        android:textColor="#AC863D"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.202"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calcular"
        app:layout_constraintVertical_bias="0.483" />

    <RadioButton
        android:id="@+id/tam1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="124dp"
        android:layout_marginBottom="17dp"
        android:text="Grande"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toStartOf="@+id/tam2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioButton
        android:id="@+id/tam2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:text="Mediano"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toStartOf="@+id/tam3"
        app:layout_constraintStart_toEndOf="@+id/tam1"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <RadioButton
        android:id="@+id/tam3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="124dp"
        android:layout_marginBottom="17dp"
        android:text="Chico"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tam2"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioButton
        android:id="@+id/sab1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:layout_marginBottom="19dp"
        android:text="Chocolate"
        app:layout_constraintBottom_toTopOf="@+id/sab4"
        app:layout_constraintEnd_toStartOf="@+id/sab2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <RadioButton
        android:id="@+id/sab2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="19dp"
        android:text="Vainilla"
        app:layout_constraintBottom_toTopOf="@+id/sab5"
        app:layout_constraintEnd_toStartOf="@+id/sab3"
        app:layout_constraintStart_toEndOf="@+id/sab1"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <RadioButton
        android:id="@+id/sab3"
        android:layout_width="69dp"
        android:layout_height="28dp"
        android:layout_marginTop="96dp"
        android:layout_marginBottom="19dp"
        android:text="Fresa"
        app:layout_constraintBottom_toTopOf="@+id/sab6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sab2"
        app:layout_constraintTop_toBottomOf="@+id/tam3" />

    <RadioButton
        android:id="@+id/sab4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="19dp"
        android:text="Flan"
        app:layout_constraintEnd_toStartOf="@+id/sab5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sab1" />

    <RadioButton
        android:id="@+id/sab5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="cheesecake"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toStartOf="@+id/sab6"
        app:layout_constraintStart_toEndOf="@+id/sab4"
        app:layout_constraintTop_toBottomOf="@+id/sab1" />

    <RadioButton
        android:id="@+id/sab6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text="Pay de Limón"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sab5"
        app:layout_constraintTop_toBottomOf="@+id/sab3" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tam2"
        app:srcCompat="@drawable/linea" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sab4"
        app:srcCompat="@drawable/linea" />


</androidx.constraintlayout.widget.ConstraintLayout>